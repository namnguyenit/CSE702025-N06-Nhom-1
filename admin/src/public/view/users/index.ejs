<%- include('../partials/header') %>
    <main>
        <h1>Hello World</h1>
        <a href="/users/create">Create</a>
        <table>
            <thead>
                <tr>
                    <td>Account</td>
                    <td>Password</td>
                    <td>Show</td>
                    <td>Destroy</td>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=>{ %>
                    <tr>
                        <td>
                            <%=user.account %>
                        </td>
                        <td>
                            <%=user.password %>
                        </td>
                        <td>
                            <a href="/users/show/<%=user.id %>">Details</a>
                        </td>
                        <td>
                            <a href="/users/destroy/<%=user.id %>">Destroy</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('../partials/footer') %>