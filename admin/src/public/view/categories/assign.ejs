<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include('../partials/head') %>

    <body>
        <div class="wrapper">
            <!-- Sidebar -->
            <%- include('../partials/sidebar') %>
                <div class="main-panel">
                    <div class="main-header">
                        <div class="main-header-logo">
                            <!-- Logo Header -->
                            <div class="logo-header" data-background-color="dark">
                                <div class="nav-toggle">
                                    <button class="btn btn-toggle toggle-sidebar">
                                        <i class="gg-menu-right"></i>
                                    </button>
                                    <button class="btn btn-toggle sidenav-toggler">
                                        <i class="gg-menu-left"></i>
                                    </button>
                                </div>
                                <button class="topbar-toggler more">
                                    <i class="gg-more-vertical-alt"></i>
                                </button>
                            </div>
                            <!-- End Logo Header -->
                        </div>
                        <!-- Navbar Header -->
                        <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
                            <div class="container-fluid">
                                <nav
                                    class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <button type="submit" class="btn btn-search pe-1">
                                                <i class="fa fa-search search-icon"></i>
                                            </button>
                                        </div>
                                        <input type="text" placeholder="Search ..." class="form-control" />
                                    </div>
                                </nav>
                            </div>
                        </nav>
                        <!-- End Navbar -->
                    </div>

                    <div class="container">
                        <div class="page-inner">
                            <div class="page-header">
                                <!-- Name Table -->
                                <%- include('../partials/name-table') %>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <div class="d-flex align-items-center">
                                                <!-- need -->
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <!-- Data Table -->
                                            <div class="table-responsive">
                                                <table id="add-row" class="display table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <td>Image</td>
                                                            <td>Name</td>
                                                            <td>Description</td>
                                                            <td>Type</td>
                                                            <td>Price</td>
                                                            <td>Assign</td>
                                                            <th style="width: 10%">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                            <td>Image</td>
                                                            <td>Name</td>
                                                            <td>Description</td>
                                                            <td>Type</td>
                                                            <td>Price</td>
                                                            <td>Assign</td>
                                                            <th>Action</th>
                                                        </tr>
                                                    </tfoot>
                                                    <tbody>
                                                        <% products.forEach(product=>{ %>
                                                            <tr>
                                                                <td><img style="width: 100px;height: 75px;object-fit: contain;"
                                                                        class="image"
                                                                        src="/products/image/<%=product.id%>"
                                                                        alt="<%=product.image?.imageName%>">
                                                                </td>
                                                                <td>
                                                                    <%=product.name %>
                                                                </td>
                                                                <td>
                                                                    <%=product.description %>
                                                                </td>
                                                                <td>
                                                                    <%=product.type %>
                                                                </td>
                                                                <td>
                                                                    <%=product.detail[0].price %> <u>Ä‘</u>
                                                                </td>
                                                                <form action="/categories/assign" method="post">
                                                                    <input type="hidden" name="productID"
                                                                        value="<%=product.id%>">
                                                                    <td style="text-align: center;">
                                                                        <% if(categories.length){ %>
                                                                            <select class="form-select form-select-sm"
                                                                                name="categoryID" style="width: 100%;">
                                                                                <option style="width: 80%;" disabled
                                                                                    selected>
                                                                                    Choice category
                                                                                </option>
                                                                                <% categories.forEach(category=>{ %>
                                                                                    <option style="width: 80%;"
                                                                                        value="<%=category.id%>">
                                                                                        <%=category.name%>
                                                                                    </option>
                                                                                    <% }) %>

                                                                            </select>
                                                                            <% }else{ %>
                                                                                Categories empty
                                                                                <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <div class="form-button-action">
                                                                            <button type="submit"
                                                                                data-bs-toggle="tooltip" title="assign"
                                                                                class="btn btn-success">
                                                                                <i class="fa fa-paper-plane"></i>
                                                                            </button>
                                                                        </div>
                                                                    </td>
                                                                </form>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Footer -->
                    <%- include('../partials/footer') %>
                </div>
        </div>
        <!-- Table Script -->
        <%- include('../partials/table-script') %>
            <!-- My Script -->
            <%- include('../partials/my-script') %>
    </body>

</html>