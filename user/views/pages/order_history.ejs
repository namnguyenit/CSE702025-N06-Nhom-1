<%- include('../partials/header', { title: 'Lịch sử mua hàng' }) %>
<div class="container mt-5">
    <h2>Lịch sử mua hàng</h2>
    <% if (orders && orders.length > 0) { %>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                <% const statusMap = { pending: 'Chờ duyệt', waiting: 'Chờ giao', shipping: 'Đang giao', delivered: 'Giao thành công', cancelled: 'Đã hủy' }; %>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.orderDate ? order.orderDate.toLocaleDateString('vi-VN') : '' %></td>
                        <td><%= statusMap[order.status] || order.status %></td>
                        <td><%= order.totalAmount %></td>
                        <td>
                            <ul>
                                <% order.items.forEach(item => { %>
                                    <li class="d-flex align-items-center">
                                        <% let image = '';
                                           if (item.image && item.image.imageData && item.image.imageType) {
                                               image = `data:${item.image.imageType};base64,${typeof item.image.imageData === 'string' ? item.image.imageData : (item.image.imageData.toString ? item.image.imageData.toString('base64') : '')}`;
                                           } else if (typeof item.image === 'string' && item.image.startsWith('data:')) {
                                               image = item.image;
                                           } %>
                                        <% if (image) { %>
                                            <img src="<%= image %>" alt="<%= item.name %>" style="width: 40px; height: 40px; object-fit: cover; margin-right: 8px;" />
                                        <% } else { %>
                                            <img src="/public/img/default_product.png" alt="No image" style="width: 40px; height: 40px; object-fit: cover; margin-right: 8px;" />
                                        <% } %>
                                        <%= item.name %> x <%= item.quantity %>
                                    </li>
                                <% }) %>
                            </ul>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>Bạn chưa có đơn hàng nào.</p>
    <% } %>
</div>
<%- include('../partials/footer') %>
