<%- include('../partials/header', { title: title }) %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card shadow" style="border-radius: 1rem;">
        <div class="card-body">
          <h2 class="mb-4 text-center text-info">Đăng Nhập Shipper</h2>
          <% if (error_msg) { %>
            <div class="alert alert-danger text-center"><%= error_msg %></div>
          <% } %>
          <form action="/auth/shipper-login" method="POST">
            <div class="form-group">
              <label for="account">Tài khoản hoặc Email</label>
              <input type="text" class="form-control" id="account" name="account" value="<%= oldInput.account %>" required autofocus>
            </div>
            <div class="form-group">
              <label for="password">Mật khẩu</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-success btn-block mt-3">Đăng Nhập</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
