<%- include('../partials/header', { title: title }) %>

<div class="slider-area ">
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="/img/hero/category.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Thanh Toán</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="checkout_area section_padding">
    <div class="container">
        <form action="/order/quick-order" method="POST" class="row contact_form" novalidate="novalidate">
            <div class="col-lg-8">
                <h3>Thông Tin Đặt Hàng</h3>
                <div class="row">
                    <div class="col-md-6 form-group p_star">
                        <input type="text" class="form-control" name="firstName" placeholder="Họ" required />
                    </div>
                    <div class="col-md-6 form-group p_star">
                        <input type="text" class="form-control" name="lastName" placeholder="Tên" required />
                    </div>
                    <div class="col-md-12 form-group">
                        <input type="text" class="form-control" name="address" placeholder="Địa chỉ" required />
                    </div>
                    <div class="col-md-6 form-group p_star">
                        <input type="text" class="form-control" name="phone" placeholder="Số điện thoại" required />
                    </div>
                    <div class="col-md-6 form-group p_star">
                        <input type="email" class="form-control" name="email" placeholder="Email" required />
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="order_box">
                    <h2>Đơn Hàng Của Bạn</h2>
                    <ul class="list">
                        <% if (cart && cart.length > 0) { %>
                            <% cart.forEach(item => { %>
                                <li><%= item.product.name %> <span class="middle">x <%= item.quantity %></span> <span class="last"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format((item.product.detail && item.product.detail[0] ? (typeof item.product.detail[0].price === 'string' ? parseFloat(item.product.detail[0].price) : item.product.detail[0].price) : 0) * item.quantity) %></span></li>
                            <% }); %>
                        <% } else { %>
                            <li>Không có sản phẩm trong giỏ hàng.</li>
                        <% } %>
                    </ul>
                    <ul class="list list_2">
                        <li><span>Tổng</span> <span><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(cartTotal || 0) %></span></li>
                    </ul>
                    <button type="submit" class="btn_3 w-100 mt-3">Đặt Hàng</button>
                </div>
            </div>
            <% if (typeof buyNow !== 'undefined' && buyNow && cart && cart.length === 1) { %>
                <input type="hidden" name="buyNow" value="1">
                <input type="hidden" name="productId" value="<%= cart[0].product._id %>">
                <input type="hidden" name="name" value="<%= cart[0].product.name %>">
                <input type="hidden" name="type" value="<%= cart[0].product.type %>">
                <input type="hidden" name="size" value="<%= cart[0].product.detail[0].size %>">
                <input type="hidden" name="price" value="<%= cart[0].product.detail[0].price %>">
                <input type="hidden" name="quantity" value="<%= cart[0].quantity %>">
                <input type="hidden" name="image" value="<%= cart[0].product.image %>">
            <% } %>
        </form>
    </div>
</section>

<script>
// Đảm bảo SweetAlert2 đã được nhúng qua footer

document.addEventListener('DOMContentLoaded', function() {
  const checkoutForm = document.querySelector('form[action="/order/quick-order"]');
  if (checkoutForm) {
    checkoutForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(checkoutForm);
      const data = {};
      formData.forEach((value, key) => { data[key] = value; });
      try {
        const res = await fetch('/order/quick-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const result = await res.json();
        if (result.success) {
          window.location.href = '/order/checkout?orderId=' + result.orderId;
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Đặt hàng thất bại!',
            text: result.message || 'Có lỗi xảy ra, vui lòng thử lại.',
            confirmButtonText: 'OK'
          });
        }
      } catch (err) {
        Swal.fire({
          icon: 'error',
          title: 'Lỗi kết nối!',
          text: 'Không thể đặt hàng. Vui lòng thử lại.',
          confirmButtonText: 'OK'
        });
      }
    });
  }
});
</script>
<%- include('../partials/footer') %>
